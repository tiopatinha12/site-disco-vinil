{% extends "partials/template.twig" %}

{% block content %}

<div class="py-5 text-center">
	<img class="d-block mx-auto mb-4" src="/resources/img/icone-login.png" alt="" width="72" height="auto">
	<h2>Comprar</h2>
</div>

<div class="row g-5">
	<div class="col-md-5 col-lg-4 order-md-last">
		<h4 class="d-flex justify-content-between align-items-center mb-3">
			<span class="text-primary">Seu Carrinho</span>
			<span class="badge bg-primary rounded-pill">3</span>
		</h4>
		<ul class="list-group mb-3">
			{% for produto in cart %}
			<li class="list-group-item d-flex justify-content-between lh-sm">
				<div>
					<h6 class="my-0">{{produto.nome}}</h6>
					<small class="text-muted">{{produto.banda}}</small>
				</div>
				<span class="text-muted">R$ {{produto.valor}}</span>
			</li>
			{% else %}

			<li class="list-group-item d-flex justify-content-between lh-sm">
				<div>
					<h6 class="my-0 text-warning">carrinho vazio</h6>
				</div>
			</li>
			{% endfor %}
			<li class="list-group-item d-flex justify-content-between">
				<span>Total (BRL)</span>
				<strong>R$ {{total}}</strong>
			</li>
		</ul>
	</div>
	<div class="col-md-7 col-lg-8">
		<h4 class="mb-3">Endereço</h4>
		<form class="needs-validation" novalidate="" form_signature="6299363098194532830"
			form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv">
			<div class="row g-3">
				<div class="col-sm-6">
					<label for="firstName" class="form-label">Nome</label>
					<input type="text" class="form-control" id="firstName" placeholder="" value="" required=""
						field_signature="1855613035" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Campo nome é obrigatório.

					</div>
				</div>

				<div class="col-sm-6">
					<label for="lastName" class="form-label">Sobrenome</label>
					<input type="text" class="form-control" id="lastName" placeholder="" value="" required=""
						field_signature="4163345999" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Campo sobrenome é obrigatório.
					</div>
				</div>


				<div class="col-12">
					<label for="email" class="form-label">Email <span class="text-muted"></span></label>
					<input type="email" class="form-control" id="email" placeholder="Disco@gmail.com"
						field_signature="1029417091" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true">
					<div class="invalid-feedback">
						Por favor, entrar com um e-mail valido para possa receber atualizações.
					</div>
				</div>

				<div class="col-12">
					<label for="address" class="form-label">Endereço do destinatário</label>
					<input type="text" class="form-control" id="address" placeholder="Rua" required=""
						field_signature="509334676" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Por favor, entre com um endereço valido.
					</div>
				</div>

				<div class="col-md-3">
					<label for="zip" class="form-label">CEP
					</label>
					<input type="text" class="form-control" id="CPF" placeholder="" required=""
						field_signature="569224803" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						CEP obrigatório.
					</div>
				</div>
			</div>

			<hr class="my-4">


			<hr class="my-4">

			<h4 class="mb-3">Método de Pagamento</h4>

			<div class="my-3">
				<div class="form-check">
					<input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required=""
						field_signature="1059903636" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true">
					<label class="form-check-label" for="credit">Cartão de crédito</label>
				</div>
				<div class="form-check">
					<input id="debit" name="paymentMethod" type="radio" class="form-check-input" required=""
						field_signature="1059903636" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true">
					<label class="form-check-label" for="debit">Boleto</label>
				</div>
				<div class="form-check">
					<input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required=""
						field_signature="1059903636" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true">
					<label class="form-check-label" for="paypal">PayPal</label>
				</div>
			</div>

			<div class="row gy-3">
				<div class="col-md-6">
					<label for="cc-name" class="form-label">Nome do titular</label>
					<input type="text" class="form-control" id="cc-name" placeholder="" required=""
						field_signature="3340391946" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<small class="text-muted">Full name as displayed on card</small>
					<div class="invalid-feedback">
						Name on card is required
					</div>
				</div>

				<div class="col-md-6">
					<label for="cc-number" class="form-label">Número do cartão</label>
					<input type="text" class="form-control" id="cc-number" placeholder="" required=""
						field_signature="1415886167" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Credit card number is required
					</div>
				</div>

				<div class="col-md-3">
					<label for="cc-expiration" class="form-label">Data de expiração</label>
					<input type="text" class="form-control" id="cc-expiration" placeholder="" required=""
						field_signature="510509906" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Expiration date required
					</div>
				</div>

				<div class="col-md-3">
					<label for="cc-cvv" class="form-label">CVV</label>
					<input type="text" class="form-control" id="cc-cvv" placeholder="" required=""
						field_signature="2349999409" form_signature="6299363098194532830"
						form_signature_string="https://getbootstrap.com&amp;&amp;firstName&amp;lastName&amp;username&amp;email&amp;address&amp;address2&amp;country&amp;state&amp;zip&amp;cc-name&amp;cc-number&amp;cc-expiration&amp;cc-cvv"
						visibility_annotation="true" spellcheck="false" data-ms-editor="true">
					<div class="invalid-feedback">
						Security code required
					</div>
				</div>
			</div>

			<hr class="my-4">

			<button class="w-100 btn btn-primary btn-lg" type="submit">Finalizar compra</button>
		</form>
	</div>
</div>

{% endblock %}