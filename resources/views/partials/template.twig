<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	{% block header_content %}
	<meta name="description" content="">
	<meta name="author" content="{{ author }}">
	<link href="/public/favicon.ico" rel="icon" type="image/x-icon" />
	<title>{{ appname }} {{ pagename }}</title>

	{% endblock %}

	{% block header_add %}
	{% endblock %}

	{% block styles %}
	{#Bootstrap CSS#}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="/public/css/app.css">
	{% endblock %}
	{% block add_style %}
	{% endblock %}

</head>

<body>

	{% block navigation %}
	<nav class="container">
		<header
			class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">

			<ul class="nav col-12 col-md-3 mb-2 justify-content-center mb-md-0">
				<li><a href="/home" class="nav-link px-2 link-dark">Loja</a></li>
				<li><a href="/sobre" class="nav-link px-2 link-dark">Sobre nós</a></li>
			</ul>

			<a href="/home" class="d-flex align-items-center col-md-auto mb-2 mb-md-0 text-dark navbar-brand">
				{{ appname }}</a>

			<div class="col-md-3 text-end">
				<div>
					<form action="/checkout" method="post">
						<input type="hidden" name="cart" id='cart'>
						<button class="btn" type="submit" onclick="handle_cart()"><i class="bi bi-bag"></i></button>
					</form>
				</div>
		</header>
	</nav>
	{% endblock %}


	{% block content %}

	<div class="container">

		<div class="text-center mt-4">
			No content added
		</div>

	</div>
	{% endblock %}

	{% block footer %}
	<footer class="text-muted py-5">
		<div class="container">
			<p class="mb-0 text-end">
				<a class="btn link-primary" href="mailto://kauefelipe9@gmail.com">
					Contato@discomania.com
				</a>
			</p>
			<p class="mb-1 text-end">
				<a class="btn link-primary"
					href="https://servicos.receita.fazenda.gov.br/servicos/cnpjreva/cnpjreva_solicitacao.asp">
					CNPJ: 00.888.000/0001-00
				</a>
			</p>
			<p class="mb-0 text-end">
				<a class="btn link-primary" href="/login" class="btn">Área do funcionário</a>
			</p>
			<a class="btn" href="https://twitter.com/Twitter">
				<i class="bi bi-twitter"></i>
			</a>
			<a class="btn" href="https://www.facebook.com/facebookappBrasil">
				<i class="bi bi-facebook"></i>
			</a>
			<a class="btn" href="https://www.instagram.com/instagram/">
				<i class="bi bi-instagram"></i>
			</a>

			<p class="mb-0 text-center">
				Copyright 2021
			</p>
		</div>
	</footer>

	{% endblock %}

	{% block scripts %}
	{# Bootstrap core JavaScript#}
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
		integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
		integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"
		integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
	<script language="JavaScript">
		function handle_cart() {
			$('#cart').attr('value', JSON.parse(sessionStorage.getItem('cart')));
		}
	</script>
	{% endblock %}
	{% block add_script %}
	{% endblock %}
</body>

</html>
